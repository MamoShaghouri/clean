<Window x:Class="Shaghouri.Draw_Rectangle"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shaghouri"
        mc:Ignorable="d"
        Title="Draw_Rectangle" Height="330" Width="450" ResizeMode="NoResize"
        KeyDown="Window_KeyDown">
    <Grid x:Name="Window_Draw_Rectangle">
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="White"/>
                <GradientStop Color="#FFE3F2FD" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        <!-- العناوين -->
        <TextBlock x:Name="Text_Name" HorizontalAlignment="Left" Margin="34,50,0,0" TextWrapping="Wrap" Text="Name" VerticalAlignment="Top" Height="30" FontSize="20" FontWeight="Bold" Foreground="#1976D2" Width="60"/>
        <Border Margin="122,50,38,0" Height="35" Width="240" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" VerticalAlignment="Top">
            <TextBox x:Name="Edit_Name" FontSize="14" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent"/>
        </Border>
        <TextBlock x:Name="Text_Height" HorizontalAlignment="Left" Margin="34,105,0,0" TextWrapping="Wrap" Text="Width" VerticalAlignment="Top" Height="30" FontSize="20" FontWeight="Bold" Foreground="#1976D2" Width="64"/>
        <Border Margin="122,105,38,0" Height="35" Width="240" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" VerticalAlignment="Top">
            <Grid>
                <TextBox x:Name="Edit_Height" FontSize="14" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent" Width="200"/>
                <TextBlock x:Name="Unit_Height" Text="cm" FontSize="14" Foreground="#1976D2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>
            </Grid>
        </Border>
        <TextBlock x:Name="Text_Width" HorizontalAlignment="Left" Margin="34,160,0,0" TextWrapping="Wrap" Text="Height" VerticalAlignment="Top" Height="30" FontSize="20" FontWeight="Bold" Foreground="#1976D2" Width="60"/>
        <Border Margin="122,160,38,0" Height="35" Width="240" CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" VerticalAlignment="Top">
            <Grid>
                <TextBox x:Name="Edit_Width" FontSize="14" VerticalContentAlignment="Center" BorderThickness="0" Background="Transparent" Width="200"/>
                <TextBlock x:Name="Unit_Width" Text="cm" FontSize="14" Foreground="#1976D2" VerticalAlignment="Center" HorizontalAlignment="Right" Margin="0,0,8,0"/>
            </Grid>
        </Border>
        <!-- حقول الإدخال مع Border -->
        <!-- تم حذف Borders _1 و _2 و _3 هنا -->
        <!-- زر OK -->
        <Border CornerRadius="10" Background="#1976D2" Margin="145,224,0,0" Height="45" Width="115" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="btn_Ok" Content="OK" FontSize="16" FontWeight="Bold" Foreground="White"
                    Background="Transparent" BorderThickness="0" Height="45" Width="115" Cursor="Hand" Click="btn_Ok_Click"/>
        </Border>
        <!-- زر Cancel -->
        <Border CornerRadius="10" Background="#F44336" Margin="267,224,0,0" Height="45" Width="115" HorizontalAlignment="Left" VerticalAlignment="Top">
            <Button x:Name="btn_Cancel" Content="Cancel" FontSize="16" FontWeight="Bold" Foreground="White"
                    Background="Transparent" BorderThickness="0" Height="45" Width="115" Cursor="Hand" Click="btn_Cancel_Click"/>
        </Border>
        <!-- الأزرار مع Border -->

    </Grid>
</Window>
