<Window x:Class="Shaghouri.Create"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shaghouri"
        mc:Ignorable="d"
        Title="Create" WindowState="Maximized"
        MinWidth="800" MinHeight="600"
        PreviewKeyDown="Window_KeyDown">
    <Window.Resources>
        <FontFamily x:Key="ModernFont">Segoe UI</FontFamily>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF41D8CE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="20"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="3,3,3,3"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontFamily" Value="{StaticResource ModernFont}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="100">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="8" ShadowDepth="2" Opacity="0.3"/>
                            </Border.Effect>
                            <Border.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1"/>
                            </Border.RenderTransform>
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <EventTrigger RoutedEvent="Button.PreviewMouseLeftButtonDown">
                                <BeginStoryboard>
                                    <Storyboard>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleX)" To="1.1" Duration="0:0:0.08" AutoReverse="True"/>
                                        <DoubleAnimation Storyboard.TargetProperty="(UIElement.RenderTransform).(ScaleTransform.ScaleY)" To="1.1" Duration="0:0:0.08" AutoReverse="True"/>
                                    </Storyboard>
                                </BeginStoryboard>
                            </EventTrigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3C736F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Background" Value="#FF41D8CE"/>
            <Setter Property="BorderBrush" Value="#FF41D8CE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Margin" Value="2,2,2,2"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="FontFamily" Value="{StaticResource ModernFont}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="18" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Padding="{TemplateBinding Padding}">
                            <Border.Effect>
                                <DropShadowEffect Color="Black" BlurRadius="6" ShadowDepth="1" Opacity="0.2"/>
                            </Border.Effect>
                            <ContentPresenter x:Name="Content" ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF3C736F"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF3C736F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF5EEAD4"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF5EEAD4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
        <LinearGradientBrush x:Key="LeftTabGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FF41D8CE" Offset="0"/>
            <GradientStop Color="#FF3C736F" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="LeftTabBorderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FF5EEAD4" Offset="0"/>
            <GradientStop Color="#FF41D8CE" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="RightTabGradient" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFBEE6E6" Offset="0"/>
            <GradientStop Color="#FF3C736F" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="RightTabBorderGradient" StartPoint="0,0" EndPoint="1,0">
            <GradientStop Color="#FFEDF6F9" Offset="0"/>
            <GradientStop Color="#FF3C736F" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="TabContentGradientLeft" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFEDF6F9" Offset="0"/>
            <GradientStop Color="#FFBEE6E6" Offset="1"/>
        </LinearGradientBrush>
        <LinearGradientBrush x:Key="TabContentGradientRight" StartPoint="0,0" EndPoint="1,1">
            <GradientStop Color="#FFFBFBFB" Offset="0"/>
            <GradientStop Color="#FF41D8CE" Offset="1"/>
