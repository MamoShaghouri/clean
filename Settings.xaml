<Window x:Class="Shaghouri.Settings"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Shaghouri"
        mc:Ignorable="d"
        Title="Settings" Height="1106" Width="2314"
        WindowState="Maximized"
        ResizeMode="CanResize">
    <Window.Resources>
        <Style x:Key="ModernButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#FF41D8CE"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="8">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FF3C736F"/>
                </Trigger>
            </Style.Triggers>
        </Style>
        <Style x:Key="ModernTabItemStyle" TargetType="TabItem">
            <Setter Property="Foreground" Value="#FF263238"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Margin" Value="4,4,4,4"/>
            <Setter Property="Padding" Value="10,4"/>
            <Setter Property="Background" Value="#FF41D8CE"/>
            <Setter Property="BorderBrush" Value="#FF41D8CE"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="TabItem">
                        <Border x:Name="Bd" Background="{TemplateBinding Background}" CornerRadius="0" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="1" Padding="{TemplateBinding Padding}">
                            <ContentPresenter x:Name="Content" ContentSource="Header" HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF3C736F"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF3C736F"/>
                                <Setter Property="Foreground" Value="White"/>
                            </Trigger>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="Bd" Property="Background" Value="#FF5EEAD4"/>
                                <Setter TargetName="Bd" Property="BorderBrush" Value="#FF5EEAD4"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Grid.Background>
            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                <GradientStop Color="#FFEDF6F9" Offset="0"/>
                <GradientStop Color="#FFBEE6E6" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
        </Grid.RowDefinitions>
        <!-- Header Bar -->
        <Border Grid.Row="0" CornerRadius="12" Margin="10,10,10,0" Height="60" Background="White">
            <DockPanel LastChildFill="False" HorizontalAlignment="Stretch" VerticalAlignment="Center" >
                <Button x:Name="BtnBack" Content="Back" Width="120" Height="40" Margin="10,0,10,0" Style="{StaticResource ModernButtonStyle}"/>
                <Button x:Name="BtnApply" Content="Apply" Width="120" Height="40" Margin="10,0,10,0" Style="{StaticResource ModernButtonStyle}"/>
                <Button x:Name="BtnSave" Content="Save" Width="120" Height="40" Margin="10,0,10,0" Style="{StaticResource ModernButtonStyle}" Click="BtnSave_Click"/>
                <Button x:Name="BtnCancel" Content="Cancel" Width="120" Height="40" Margin="10,0,10,0" Style="{StaticResource ModernButtonStyle}"/>
                <Button x:Name="BtnDefaultSettings" Content="Default Settings" Width="180" Height="40" Margin="10,0,10,0" Style="{StaticResource ModernButtonStyle}"/>
            </DockPanel>
        </Border>
        <!-- Main Content -->
        <Border Grid.Row="1" CornerRadius="16" Margin="10" Background="#FFE0F4F4">
            <TabControl TabStripPlacement="Left" Margin="10" ItemContainerStyle="{StaticResource ModernTabItemStyle}">
                <TabItem x:Name="SettingsGeneral" Header="General" Width="185" Height="75" Margin="0,0,0,10">
                    <Border x:Name="GeneralContol" Background="#FFB2DFDB" Margin="10" CornerRadius="10">
                        <TabControl TabStripPlacement="Left" ItemContainerStyle="{StaticResource ModernTabItemStyle}">
                            <TabItem x:Name="CreateControl" Header="Create" Width="185" Height="75">
                                <Grid Background="#FFCCEAE7">
                                    <TabControl TabStripPlacement="Left" ItemContainerStyle="{StaticResource ModernTabItemStyle}">
                                        <TabItem x:Name="Settings_Fabric_Type" Header="Fabric Type" Width="185" Height="75">
                                            <Grid x:Name="Tab_Control_Fabric_Type" Background="#FFE2F3F2">
                                                <TextBlock x:Name="Add_Fabric_Type" HorizontalAlignment="Left" Margin="93,84,0,0" TextWrapping="Wrap" Text="Add Fabric Type" VerticalAlignment="Top" Height="30" Foreground="Black" FontSize="20"/>
                                                <ComboBox HorizontalAlignment="Center" Margin="0,84,0,0" VerticalAlignment="Top" Width="204" IsEditable="True" Height="30"/>
                                            </Grid>
                                        </TabItem>
                                        <TabItem x:Name="Settings_Sizes" Header="Sizes" Width="185" Height="75">
                                            <Grid x:Name="Tab_Control_Settings_Sizes" Background="#FFE2F3F2">
                                                <StackPanel Margin="40,30,40,30" VerticalAlignment="Top">
                                                    <!-- العنوان الأول -->
                                                    <TextBlock Text="Add Sizes Group" FontSize="18" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,8"/>
                                                    <Border CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Margin="0,0,0,20" Height="40">
                                                        <ComboBox x:Name="Combo_Add_Sizes_Group" FontSize="14" BorderThickness="0" Background="White"
                                                                  VerticalContentAlignment="Center" Margin="12,0" IsEditable="True"/>
                                                    </Border>
                                                    <!-- العنوان الثاني -->
                                                    <TextBlock Text="Change Default Sizes Group" FontSize="18" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,8"/>
                                                    <Border CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Margin="0,0,0,20" Height="40">
                                                        <ComboBox x:Name="Combo_Change_Default_Group_Sizes" FontSize="14" BorderThickness="0" Background="White"
                                                                  VerticalContentAlignment="Center" Margin="12,0"/>
                                                    </Border>
                                                    <!-- العنوان الثالث -->
                                                    <TextBlock Text="Change Default Base Size" FontSize="18" FontWeight="SemiBold" Foreground="#424242" Margin="0,0,0,8"/>
                                                    <Border CornerRadius="8" BorderBrush="#E0E0E0" BorderThickness="1" Background="White" Margin="0,0,0,20" Height="40">
                                                        <ComboBox x:Name="Combo_Change_Default_Base_Size" FontSize="14" BorderThickness="0" Background="White"
                                                                  VerticalContentAlignment="Center" Margin="12,0"/>
                                                    </Border>
                                                </StackPanel>
                                            </Grid>
                                        </TabItem>
                                    </TabControl>
                                </Grid>
                            </TabItem>
                            <TabItem x:Name="ThemeControl" Header="Theme" Width="185" Height="75">
                                <Grid Background="#FFCCEAE7"/>
                            </TabItem>
                        </TabControl>
                    </Border>
                </TabItem>
                <TabItem x:Name="SettingsLanguage" Header="Language" Width="185" Height="75" Margin="0,0,0,10">
                    <Border x:Name="LanguageControl" Background="#FFB2DFDB" Margin="10" CornerRadius="10">
                        <Grid/>
                    </Border>
                </TabItem>
                <TabItem x:Name="SettingsData" HorizontalAlignment="Center" Height="75" Header="Data" VerticalAlignment="Center" Width="185">
                    <Border x:Name="LibrariesControl" Background="#FFB2DFDB" Margin="10" CornerRadius="10">
                        <Grid/>
                    </Border>
                </TabItem>
            </TabControl>
        </Border>
    </Grid>
</Window>
