<UserControl x:Class="Shaghouri.CustomColorPicker"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="400"
             Background="White">
    
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        
        <!-- Header -->
        <Border Grid.Row="0" Background="#FF2D2D30" Padding="10">
            <TextBlock Text="اختيار اللون" Foreground="White" FontSize="16" FontWeight="Bold" 
                       HorizontalAlignment="Center"/>
        </Border>
        
        <!-- Main Color Picker Area -->
        <Grid Grid.Row="1" Margin="10">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="Auto"/>
            </Grid.ColumnDefinitions>
            
            <!-- Color Wheel and Saturation/Brightness -->
            <Grid Grid.Column="0">
                <Grid.RowDefinitions>
                    <RowDefinition Height="*"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                
                <!-- Color Wheel -->
                <Border Grid.Row="0" BorderBrush="#FFCCCCCC" BorderThickness="1" 
                        Background="Transparent" Margin="0,0,0,10">
                    <Canvas x:Name="ColorWheelCanvas" Background="Transparent"
                            MouseDown="ColorWheelCanvas_MouseDown"
                            MouseMove="ColorWheelCanvas_MouseMove"
                            MouseUp="ColorWheelCanvas_MouseUp"/>
                </Border>
                
                <!-- Saturation/Brightness Picker -->
                <Border Grid.Row="1" BorderBrush="#FFCCCCCC" BorderThickness="1" 
                        Background="Transparent">
                    <Canvas x:Name="SaturationBrightnessCanvas" Background="Transparent"
                            MouseDown="SaturationBrightnessCanvas_MouseDown"
                            MouseMove="SaturationBrightnessCanvas_MouseMove"
                            MouseUp="SaturationBrightnessCanvas_MouseUp"/>
                </Border>
            </Grid>
            
            <!-- Color Values and Preview -->
            <StackPanel Grid.Column="1" Margin="10,0,0,0" Width="120">
                <!-- Color Preview -->
                <Border BorderBrush="#FFCCCCCC" BorderThickness="1" Height="80" Margin="0,0,0,10">
                    <Rectangle x:Name="ColorPreview" Fill="Red"/>
                </Border>
                
                <!-- RGB Values -->
                <TextBlock Text="RGB:" FontWeight="Bold" Margin="0,0,0,5"/>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,5">
                    <TextBlock Text="R:" Width="15"/>
                    <TextBox x:Name="RedTextBox" Width="30" Text="255" TextChanged="RGB_TextChanged"/>
                    <TextBlock Text="G:" Width="15" Margin="5,0,0,0"/>
                    <TextBox x:Name="GreenTextBox" Width="30" Text="0" TextChanged="RGB_TextChanged"/>
                </StackPanel>
                <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                    <TextBlock Text="B:" Width="15"/>
                    <TextBox x:Name="BlueTextBox" Width="30" Text="0" TextChanged="RGB_TextChanged"/>
                </StackPanel>
                
                <!-- HEX Value -->
                <TextBlock Text="HEX:" FontWeight="Bold" Margin="0,0,0,5"/>
                <TextBox x:Name="HexTextBox" Text="#FF0000" TextChanged="Hex_TextChanged" Margin="0,0,0,10"/>
                
                <!-- Hue Slider -->
                <TextBlock Text="Hue:" FontWeight="Bold" Margin="0,0,0,5"/>
                <Slider x:Name="HueSlider" Minimum="0" Maximum="360" Value="0" 
                        ValueChanged="HueSlider_ValueChanged"/>
            </StackPanel>
        </Grid>
        
        <!-- Favorite Colors -->
        <Border Grid.Row="2" Background="#FFF5F5F5" Padding="10">
            <StackPanel>
                <TextBlock Text="الألوان المفضلة:" FontWeight="Bold" Margin="0,0,0,5"/>
                <WrapPanel x:Name="FavoriteColorsPanel">
                    <!-- Favorite colors will be added here dynamically -->
                </WrapPanel>
            </StackPanel>
        </Border>
        
        <!-- Action Buttons -->
        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Right" 
                    Margin="10" Background="#FFF5F5F5">
            <Button x:Name="AddToFavoritesButton" Content="إضافة للمفضلة" 
                    Click="AddToFavoritesButton_Click" Margin="5" Padding="10,5"/>
            <Button x:Name="OKButton" Content="موافق" 
                    Click="OKButton_Click" Margin="5" Padding="10,5" 
                    Background="#FF007ACC" Foreground="White"/>
            <Button x:Name="CancelButton" Content="إلغاء" 
                    Click="CancelButton_Click" Margin="5" Padding="10,5"/>
        </StackPanel>
    </Grid>
</UserControl> 